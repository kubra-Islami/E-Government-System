<div class="container my-5">
    <%- include('../citizen-breadcrumb', {
    breadcrumbs: [
    { label: "Dashboard", url: "/citizen/dashboard" },
    { label: "My Requests" }
    ]
    }) %>
    <h2 class="fw-bold mb-4 text-success">
        <i class="bi bi-list-check me-2"></i> My Requests
    </h2>

    <% if (requests.length === 0) { %>
        <div class="alert alert-light border text-center py-4 rounded-3 shadow-sm">
            <i class="bi bi-inbox text-muted fs-3 mb-2 d-block"></i>
            No requests found.
        </div>
    <% } else { %>
        <div class="row g-4">
            <% requests.forEach(r => { %>
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm rounded-4 h-100">
                        <div class="card-body p-4">
                            <!-- Header -->
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="fw-bold mb-1"><%= r.service_name %></h5>
                                    <span class="text-muted small">
                                        <i class="bi bi-building me-1"></i> <%= r.department_name %>
                                    </span>
                                </div>
                                <span class="badge bg-<%= r.status === 'approved' ? 'success'
                                        : r.status === 'rejected' ? 'danger'
                                                : r.status === 'under_review' ? 'info'
                                                        : 'warning' %>">
                                    <%= r.status.replace('_', ' ') %>
                                </span>
                            </div>

                            <!-- Progress Steps -->
                            <div class="d-flex justify-content-between align-items-center text-center mb-3">
                                <div class="step flex-fill">
                                    <div class="circle <%= ['submitted','under_review','approved','rejected'].includes(r.status) ? 'bg-success text-white' : 'bg-light' %>">1</div>
                                    <small class="d-block mt-2">Submitted</small>
                                </div>
                                <div class="flex-fill border-top mx-2"></div>
                                <div class="step flex-fill">
                                    <div class="circle <%= ['under_review','approved','rejected'].includes(r.status) ? 'bg-success text-white' : 'bg-light' %>">2</div>
                                    <small class="d-block mt-2">Under Review</small>
                                </div>
                                <div class="flex-fill border-top mx-2"></div>
                                <div class="step flex-fill">
                                    <div class="circle <%= r.status === 'approved' ? 'bg-success text-white' : r.status === 'rejected' ? 'bg-danger text-white' : 'bg-light' %>">3</div>
                                    <small class="d-block mt-2"><%= r.status === 'approved' ? 'Approved' : r.status === 'rejected' ? 'Rejected' : 'Pending Decision' %></small>
                                </div>
                            </div>

                            <!-- Reviewer + Date -->
                            <p class="small mb-1">
                                <i class="bi bi-person-check me-1 text-primary"></i>
                                Reviewer: <%= r.reviewer_name || "Not reviewed yet" %>
                            </p>
                            <p class="small text-muted mb-0">
                                <i class="bi bi-calendar3 me-1"></i>
                                Submitted on <%= new Date(r.created_at).toLocaleDateString() %>
                            </p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>
</div>

<style>
    .step .circle {
        width: 32px;
        height: 32px;
        margin: 0 auto;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
    }
</style>
