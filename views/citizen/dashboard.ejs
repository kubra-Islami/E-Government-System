<div class="card bg-white shadow-sm mb-5 p-4 border-0 rounded-3">
    <div class="d-flex align-items-center">
        <i class="bi bi-person-circle text-primary fs-1 me-3"></i>
        <div>
            <h1 class="h3 fw-bold mb-0">Welcome back, <%= user.name %>!</h1>
            <p class="text-muted mb-0">Your portal for all government services is here. Let's get things done!</p>
        </div>
    </div>
</div>

<section class="mb-5">
    <h2 class="h5 text-secondary mb-4 text-uppercase">What would you like to do?</h2>
    <div class="row row-cols-1 row-cols-md-2 g-4">
        <div class="col">
            <a href="/citizen/departments" class="card card-hover-effect h-100 border-0 shadow-sm text-decoration-none">
                <div class="card-body d-flex flex-column align-items-center justify-content-center text-center">
                    <i class="bi bi-file-earmark-plus text-success fs-1 mb-2"></i>
                    <h5 class="card-title text-dark fw-bold">Apply for a New Service</h5>
                    <p class="card-text text-muted">Start a new application for passports, licenses, or other services.</p>
                </div>
            </a>
        </div>
        <div class="col">
            <a href="/requests" class="card card-hover-effect h-100 border-0 shadow-sm text-decoration-none">
                <div class="card-body d-flex flex-column align-items-center justify-content-center text-center">
                    <i class="bi bi-clock-history text-info fs-1 mb-2"></i>
                    <h5 class="card-title text-dark fw-bold">Track My Applications</h5>
                    <p class="card-text text-muted">Check the real-time status and details of your submitted requests.</p>
                </div>
            </a>
        </div>
    </div>
</section>

<section class="mb-5">
    <h2 class="h5 text-secondary mb-4 text-uppercase">Your Recent Activity</h2>
    <div class="row g-4">
        <div class="col-12 col-lg-4">
            <div class="card h-100 p-3 shadow-sm border-0 rounded-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title text-dark fw-bold mb-0">Notifications</h5>
                        <a href="/notifications" class="btn btn-sm btn-link text-decoration-none">View All</a>
                    </div>
                    <% if (notifications && notifications.unread > 0) { %>
                        <div class="alert alert-info py-2" role="alert">
                            <i class="bi bi-bell me-2"></i>You have **<%= notifications.unread %>** new notifications.
                        </div>
                    <% } %>
                    <ul class="list-group list-group-flush">
                        <% latestNotifications.forEach(notification => { %>
                            <li class="list-group-item d-flex justify-content-between align-items-start px-0 py-2">
                                <div>
                                    <p class="mb-0 fw-normal"><%= notification.message %></p>
                                    <small class="text-muted"><%= notification.timeAgo %></small>
                                </div>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-8">
            <div class="card h-100 p-3 shadow-sm border-0 rounded-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title text-dark fw-bold mb-0">My Recent Applications</h5>
                        <a href="/requests" class="btn btn-sm btn-link text-decoration-none">View All</a>
                    </div>
                    <% if (recentRequests && recentRequests.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-borderless table-hover mb-0">
                                <thead class="border-bottom">
                                <tr>
                                    <th scope="col" class="text-secondary fw-normal">Service Name</th>
                                    <th scope="col" class="text-secondary fw-normal">Status</th>
                                    <th scope="col" class="text-secondary fw-normal">Last Updated</th>
                                    <th scope="col" class="text-secondary fw-normal"></th>
                                </tr>
                                </thead>
                                <tbody>
                                <% recentRequests.forEach(request => { %>
                                    <tr>
                                        <td class="align-middle"><%= request.serviceName %></td>
                                        <td class="align-middle">
                                            <% if (request.status === 'Approved') { %>
                                                <span class="badge bg-success-subtle text-success fw-bold"><%= request.status %></span>
                                            <% } else if (request.status === 'Rejected') { %>
                                                <span class="badge bg-danger-subtle text-danger fw-bold"><%= request.status %></span>
                                            <% } else { %>
                                                <span class="badge bg-warning-subtle text-warning fw-bold"><%= request.status %></span>
                                            <% } %>
                                        </td>
                                        <td class="align-middle text-muted"><%= request.lastUpdated %></td>
                                        <td class="align-middle text-end">
                                            <a href="/requests/<%= request.id %>" class="btn btn-sm btn-outline-secondary">Details</a>
                                        </td>
                                    </tr>
                                <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="text-center py-4">
                            <p class="text-muted mb-0">You have not submitted any applications yet.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>