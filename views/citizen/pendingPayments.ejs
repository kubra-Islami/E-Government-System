<div class="container py-5">
    <h2 class="mb-5 text-center fw-bold">Pending Payments</h2>

    <% if (requests.length === 0) { %>
        <div class="text-center text-muted fs-5">
            <i class="bi bi-check-circle text-success fs-1 d-block mb-3"></i>
            No pending payments. ðŸŽ‰
        </div>
    <% } else { %>
        <div class="row g-4">
            <% requests.forEach(r => { %>
                <div class="col-md-6 col-lg-4">
                    <div class="card border-0 shadow-sm h-100 rounded-4">
                        <div class="card-body d-flex flex-column">

                            <!-- Service Info -->
                            <h5 class="fw-semibold mb-1"><%= r.service_name %></h5>
                            <p class="text-secondary small mb-2">
                                <i class="bi bi-building me-1"></i>
                                <%= r.department_name %>
                            </p>

                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <!-- Price -->
                                <span class="fw-bold fs-5 text-success">
                                    $<%= r.service_fee %>
                                </span>

                                <!-- Pay Button -->
                                <% if (r.status === "approved") { %>
                                    <a href="/citizen/payments/<%= r.id %>"
                                       class="btn btn-dark rounded-pill px-4">
                                        <i class="bi bi-credit-card me-2"></i> Pay
                                    </a>
                                <% } else { %>
                                    <span class="badge bg-secondary px-3 py-2 rounded-pill">
                                        <i class="bi bi-hourglass-split me-1"></i> Waiting Approval
                                    </span>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>
</div>
