<nav aria-label="breadcrumb">
    <ol class="breadcrumb bg-light p-3 rounded-3">
        <li class="breadcrumb-item"><a href="/citizen/dashboard" class="text-decoration-none text-secondary">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/citizen/departments" class="text-decoration-none text-secondary">Departments</a></li>
        <li class="breadcrumb-item active text-primary" aria-current="page"><%= selectedDepartment.name %> Services</li>
    </ol>
</nav>

<div class="card bg-white shadow-sm mb-5 p-4 border-0 rounded-3">
    <div class="d-flex align-items-center">
        <i class="bi bi-person-fill-gear text-info fs-1 me-3"></i>
        <div>
            <h1 class="h3 fw-bold mb-0"><%= selectedDepartment.name %> Services</h1>
            <p class="text-muted mb-0">Browse and apply for services from this department.</p>
        </div>
    </div>
</div>

<section>
    <% if (services && services.length > 0) { %>
        <div class="row g-4">
            <% services.forEach(service => { %>
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm rounded-3 card-hover-effect">
                        <div class="card-body d-flex flex-column">
                            <i class="bi bi-file-earmark-text text-success fs-3 mb-2"></i>
                            <h5 class="card-title fw-bold text-dark"><%= service.name %></h5>
                            <p class="card-text text-muted flex-grow-1"><%= service.description %></p>
                            <span class="badge bg-light text-dark fw-normal me-auto mb-2"><%= service.fee > 0 ? '$' + service.fee : 'Free' %></span>
                            <a href="/citizen/services/apply/<%= service.id %>" class="btn btn-outline-primary mt-auto">Apply Now</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="alert alert-info text-center" role="alert">
            No services are currently available for this department.
        </div>
    <% } %>
</section>