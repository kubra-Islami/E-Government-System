<div class="container py-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-light p-3 rounded-3">
            <li class="breadcrumb-item"><a href="/citizen/dashboard" class="text-decoration-none text-secondary">Dashboard</a></li>
            <li class="breadcrumb-item active text-primary" aria-current="page">profile</li>
        </ol>
    </nav>
    <div class="row g-4 my-5">
        <!-- Left Column: Avatar -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 p-3 text-center">
                <div class="mb-3">
                    <img src="<%= user.avatar || '../../images/default-avatar.jpg'  %>"
                         alt="avatar image"
                         class="rounded-circle mb-3"
                         width="130" height="130">
                </div>

                <h5 class="fw-bold mb-1"><%= user.name %></h5>
                <p class="text-muted small mb-3">National ID: <%= user.national_id %></p>

                <form action="/citizen/profile/upload-avatar" method="POST" enctype="multipart/form-data">
                    <input type="file" name="avatar" class="form-control form-control-sm mb-2">
                    <button class="btn btn-primary btn-sm w-100 rounded-pill">
                        <i class="bi bi-upload me-1"></i> Update Picture
                    </button>
                </form>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <form action="/citizen/profile/update" method="POST" class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Full Name</label>
                            <input type="text" class="form-control rounded" name="name" value="<%= user.name || 'Guest' %>">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">National ID</label>
                            <input type="text" class="form-control rounded" name="national_id" value="<%= user.national_id %>">
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Date of Birth</label>
                            <input type="date" class="form-control rounded" name="date_of_birth"
                                   value="<%= user.date_of_birth ? user.date_of_birth.toISOString().split('T')[0] : '' %>" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Email</label>
                            <input type="email" class="form-control rounded" name="email" value="<%= user.email %>">
                        </div>

                        <div class="col-md-6">
                            <label for="phone" class="form-label">Phone Number </label>
                            <input
                                    type="tel"
                                    class="form-control"
                                    id="phone"
                                    name="phone"
                                    placeholder="Enter your phone number"
                                    pattern="^\d{11}$"
                                    maxlength="11"
                                    minlength="11"
                                    value="<%= user.phone %>">
                            <div class="invalid-feedback">Phone number must be exactly 11 digits.</div>
                        </div>
                        <div class="col-12 text-end mt-2">
                            <button class="btn btn-success rounded-pill px-4">
                                <i class="bi bi-save me-1"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Card hover effect */
    .card:hover {
        transform: translateY(-2px);
        transition: 0.3s;
    }

    /* Rounded file input */
    input[type="file"] {
        border-radius: 0.5rem;
    }
</style>
