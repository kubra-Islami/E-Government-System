<!-- profile.ejs -->
<main class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"><i class="bi bi-person-circle me-2"></i> My Profile</h2>
        <a href="/citizen/dashboard" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to Dashboard
        </a>
    </div>

    <div class="row">
        <!-- Profile Info Card -->
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <!-- Profile Picture -->
                    <img src="<%= user.avatar || '/images/default-avatar.png' %>"
                         alt="Profile Picture"
                         class="rounded-circle mb-3"
                         width="120" height="120">

                    <h5 class="card-title fw-bold"><%= user.name %></h5>
                    <p class="text-muted">National ID: <%= user.national_id %></p>

                    <!-- Upload new picture -->
                    <form action="/citizen/profile/upload-avatar" method="POST" enctype="multipart/form-data" class="mt-3">
                        <input type="file" name="avatar" class="form-control mb-2">
                        <button class="btn btn-sm btn-primary w-100" type="submit">
                            <i class="bi bi-upload"></i> Update Picture
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Editable Info -->
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="fw-bold mb-3"><i class="bi bi-pencil-square me-2"></i> Personal Information</h5>
                    <form action="/citizen/profile/update" method="POST">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Full Name</label>
                            <input type="text" name="name" value="<%= user.name || 'Guest' %>" class="form-control" readonly>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">National ID</label>
                            <input type="text" name="national_id" value="<%= user.national_id %>" class="form-control" readonly>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Date of Birth</label>
                            <input type="date" name="dob" value="<%= user.dob %>" class="form-control" readonly>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Email</label>
                            <input type="email" name="email" value="<%= user.email %>" class="form-control">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Phone Number</label>
                            <input type="text" name="phone" value="<%= user.phone %>" class="form-control">
                        </div>

                        <button class="btn btn-success"><i class="bi bi-save me-1"></i> Save Changes</button>
                    </form>
                </div>
            </div>

            <!-- Recent Activity -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="fw-bold mb-3"><i class="bi bi-clock-history me-2"></i> Recent Activity</h5>
                    <ul class="list-group">
                        <% recentActivities.forEach(activity => { %>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-check2-circle text-success me-2"></i> <%= activity.description %></span>
                                <small class="text-muted"><%= activity.date %></small>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</main>
