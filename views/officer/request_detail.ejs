<div class="container py-4">
    <!-- Header -->
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-primary mb-2">
            Request <span class="text-secondary">#<%= request.request_number %></span>
        </h3>
        <span class="badge
             <%= request.status === 'approved' ? 'bg-success' :
                        request.status === 'rejected' ? 'bg-danger' :
                                request.status === 'under_review' ? 'bg-warning text-dark' : 'bg-secondary' %>
             text-uppercase fs-7 px-3 py-1">
            <%= request.status ? request.status.replace('_', ' ') : 'Unknown' %>
        </span>
    </div>

    <!-- Info Cards -->
    <div class="row g-3 mb-4">
        <!-- Citizen Info -->
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="fw-semibold mb-2"><i class="bi bi-person-fill me-2"></i>Citizen</h6>
                    <p class="mb-1"><strong>Name:</strong> <%= request.citizen_name %></p>
                    <p class="mb-0"><strong>Email:</strong> <%= request.citizen_email %></p>
                </div>
            </div>
        </div>

        <!-- Service Info -->
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="fw-semibold mb-2"><i class="bi bi-gear-fill me-2"></i>Service</h6>
                    <p class="mb-1"><strong>Service:</strong> <%= request.service_name %></p>
                    <p class="mb-0"><strong>Department:</strong> <%= request.department_name %></p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <!-- Documents -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="fw-semibold mb-2"><i class="bi bi-folder2-open me-2"></i>Documents</h6>
                    <% if (documents.length === 0) { %>
                        <p class="text-muted small">No documents uploaded.</p>
                    <% } else { %>
                        <ul class="list-group list-group-flush small">
                            <% if ((documents || []).length === 0) { %>
                                <p class="text-muted small">No documents uploaded.</p>
                            <% } else { %>
                                <ul class="list-group list-group-flush small">
                                    <% documents.forEach(d => { %>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><i class="bi bi-file-earmark-text me-2"></i><%= d.filename %></span>
                                            <a href="/officer/documents/<%= d.id %>/download" target="_blank" class="btn btn-sm btn-outline-primary">Download</a>
                                        </li>
                                    <% }) %>
                                </ul>
                            <% } %>
                        </ul>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="fw-semibold mb-2"><i class="bi bi-check2-square me-2"></i>Officer Review</h6>

                    <% if(request.status === 'submitted') { %>
                        <form action="/officer/requests/<%= request.id %>/review" method="POST">
                            <textarea name="comment" class="form-control mb-2" placeholder="First review comments"></textarea>
                            <button type="submit" name="action" value="review" class="btn btn-warning w-100">Mark as Under Review</button>
                        </form>

                    <% } else if(request.status === 'under_review') { %>
                        <form action="/officer/requests/<%= request.id %>/review" method="POST">
                            <textarea name="comment" class="form-control mb-2" placeholder="Final decision comments"></textarea>
                            <div class="d-flex gap-2">
                                <button type="submit" name="action" value="approve" class="btn btn-success flex-grow-1">Approve</button>
                                <button type="submit" name="action" value="reject" class="btn btn-danger flex-grow-1">Reject</button>
                            </div>
                        </form>

                    <% } else { %>
                        <p class="text-muted">
                            This request has been
                            <strong><%= request.status ? request.status.replace('_', ' ') : 'Unknown' %></strong>.
                        </p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Submitted Data -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-3">
            <h6 class="fw-semibold mb-2"><i class="bi bi-journal-text me-2"></i>Submitted Data</h6>
            <% if (request.data && Object.keys(request.data).length > 0) { %>
                <ul class="list-group list-group-flush small">
                    <% Object.entries(request.data).forEach(([key, value]) => { %>
                        <li class="list-group-item d-flex justify-content-between align-items-start py-2 px-2">
                            <span class="fw-semibold text-capitalize"><%= key.replace(/_/g, ' ') %></span>
                            <span><%= value %></span>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p class="text-muted small">No submitted data available.</p>
            <% } %>
        </div>
    </div>

</div>
