<h1 class="mb-4"><%= title %></h1>

<ul class="list-group">
    <% notifications.forEach(n => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center <%= n.is_read ? 'list-group-item-secondary' : 'list-group-item-warning' %>">
            <div>
                <%= n.message %>
                <small class="text-muted ms-2">(<%= n.channel %>)</small>
            </div>
            <% if (!n.is_read) { %>
                <form action="/<%= user.role %>/notifications/<%= n.id %>/read" method="POST" class="mb-0">
                    <button class="btn btn-sm btn-primary" type="submit">Mark as read</button>
                </form>
            <% } %>
        </li>
    <% }) %>
</ul>
