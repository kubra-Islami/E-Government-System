<h2>Manage Users</h2>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb bg-light p-3 rounded-3">
        <li class="breadcrumb-item"><a href="/admin/dashboard"
                                       class="text-decoration-none text-secondary">Dashboard</a></li>
        <li class="breadcrumb-item active text-primary" aria-current="page">Manage Users</li>
    </ol>
</nav>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% if (users.length > 0) { %>
        <% users.forEach(u => { %>
            <tr>
                <td><%= u.name %></td>
                <td><%= u.email %></td>
                <td><%= u.role %></td>
                <td>
                    <a href="/admin/users/<%= u.id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                    <a href="/admin/users/<%= u.id %>/delete" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        <% }) %>
    <% } else { %>
        <tr><td colspan="4" class="text-center">No users found</td></tr>
    <% } %>
    </tbody>

</table>
