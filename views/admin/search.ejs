<div class="container mt-5">

    <!-- Page Title -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"><i class="bi bi-search me-2"></i> <%= title %></h2>
    </div>

    <!-- Search Form -->
    <form method="GET" action="/admin/search" class="mb-5">
        <div class="input-group shadow-sm rounded">
            <input type="text" name="q" class="form-control border-primary" placeholder="Search users, services, requests..." value="<%= typeof q !== 'undefined' ? q : '' %>">
            <button class="btn btn-primary"><i class="bi bi-search me-1"></i> Search</button>
        </div>
    </form>

    <!-- Users Section -->
    <div class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-secondary"><i class="bi bi-people me-2"></i> Users</h4>
            <span class="badge bg-info text-dark"><%= users.length %></span>
        </div>
        <% if (users.length > 0) { %>
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                <% users.forEach(u => { %>
                    <div class="col">
                        <div class="card h-100 shadow-sm border-0 hover-card">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title"><i class="bi bi-person-circle me-2"></i><%= u.name %></h5>
                                    <p class="card-text text-muted"><i class="bi bi-envelope me-1"></i> <%= u.email %></p>
                                    <span class="badge bg-info text-dark"><%= u.role %></span>
                                </div>
                                <a href="/admin/users/<%= u.id %>/edit" class="btn btn-sm btn-outline-primary mt-3 w-100">Edit User</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p class="text-muted">No users found</p>
        <% } %>
    </div>

    <!-- Services Section -->
    <div class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-secondary"><i class="bi bi-gear me-2"></i> Services</h4>
            <span class="badge bg-warning text-dark"><%= services.length %></span>
        </div>
        <% if (services.length > 0) { %>
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                <% services.forEach(s => { %>
                    <div class="col">
                        <div class="card h-100 shadow-sm border-0 hover-card">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title"><i class="bi bi-gear-fill me-2"></i> <%= s.name %></h5>
                                    <p class="card-text text-muted"><i class="bi bi-building me-1"></i> Department: <%= s.department %></p>
                                    <span class="badge bg-warning text-dark">$<%= s.fee %></span>
                                </div>
                                <a href="/admin/services/<%= s.id %>/edit" class="btn btn-sm btn-outline-warning mt-3 w-100">Edit Service</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p class="text-muted">No services found</p>
        <% } %>
    </div>

    <!-- Requests Section -->
    <div class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-secondary"><i class="bi bi-file-earmark-text me-2"></i> Requests</h4>
            <span class="badge bg-success text-dark"><%= requests.length %></span>
        </div>
        <% if (requests.length > 0) { %>
            <div class="table-responsive shadow-sm rounded">
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Citizen</th>
                        <th>Service</th>
                        <th>Status</th>
                        <th>Submitted At</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% requests.forEach(r => { %>
                        <tr>
                            <td><%= r.id %></td>
                            <td><%= r.citizen_name %></td>
                            <td><%= r.service_name %></td>
                            <td>
                                <% if(r.status === 'approved') { %>
                                    <span class="badge bg-success"><%= r.status %></span>
                                <% } else if(r.status === 'rejected') { %>
                                    <span class="badge bg-danger"><%= r.status %></span>
                                <% } else { %>
                                    <span class="badge bg-warning text-dark"><%= r.status %></span>
                                <% } %>
                            </td>
                            <td><%= new Date(r.created_at).toLocaleDateString() %></td>
                            <td>
                                <a href="/admin/requests/<%= r.id %>" class="btn btn-sm btn-outline-primary">View</a>
                            </td>
                        </tr>
                    <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p class="text-muted">No requests found</p>
        <% } %>
    </div>

</div>

<style>
    .hover-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
    }
    .badge {
        font-size: 0.85em;
    }
</style>
