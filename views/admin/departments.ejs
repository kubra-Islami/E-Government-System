<div class="container mt-4">
    <h2><%= title %></h2>

    <table class="table table-bordered mt-3">
        <thead>
        <tr>
            <th>ID</th>
            <th>Department Name</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% if (departments.length > 0) { %>
            <% departments.forEach(dep => { %>
                <tr>
                    <td><%= dep.id %></td>
                    <td><%= dep.name %></td>
                    <td>
                        <a href="/admin/departments/<%= dep.id %>/show" class="btn btn-sm btn-primary">Edit</a>
                        <a href="/admin/departments/<%= dep.id %>/delete" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr><td colspan="3" class="text-center">No departments found</td></tr>
        <% } %>
        </tbody>
    </table>
    <button class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#addDepartmentModal<%= dep.id %>">
        Add Department
    </button>
    <div class="modal fade" id="addDepartmentModal<%= dep.id %>" tabindex="-1" aria-labelledby="addDepartmentModalLabel<%= dep.id %>" aria-hidden="true">
        <div class="modal-dialog">
            <form action="/admin/add_department" method="POST" class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addDepartmentModalLabel<%= dep.id %>">Add Department</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Department Name</label>
                        <input type="text" name="name" class="form-control" value="<%= dep.name %>" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
