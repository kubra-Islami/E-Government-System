<div class="container py-4">
    <div class="row g-3">
        <!-- Total Requests -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0 hover-shadow h-100 text-center">
                <div class="card-body d-flex flex-column align-items-center justify-content-center py-4">
                    <h5 class="card-title fw-bold">Total Requests</h5>
                    <p class="text-muted small">All service requests submitted by citizens.</p>
                    <p class="display-6 fw-bold text-primary"><%= stats.total_requests %></p>
                </div>
            </div>
        </div>

        <!-- Approved Requests -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0 hover-shadow h-100 text-center">
                <div class="card-body d-flex flex-column align-items-center justify-content-center py-4">
                    <h5 class="card-title fw-bold">Approved Requests</h5>
                    <p class="text-muted small">Requests that have been approved.</p>
                    <p class="display-6 fw-bold text-success"><%= stats.approved %></p>
                </div>
            </div>
        </div>

        <!-- Rejected Requests -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0 hover-shadow h-100 text-center">
                <div class="card-body d-flex flex-column align-items-center justify-content-center py-4">
                    <h5 class="card-title fw-bold">Rejected Requests</h5>
                    <p class="text-muted small">Requests still waiting for review or rejected.</p>
                    <p class="display-6 fw-bold text-danger"><%= stats.rejected %></p>
                </div>
            </div>
        </div>

        <!-- Manage Users -->
        <div class="col-md-6 col-lg-4">
            <a href="/admin/users" class="text-decoration-none">
                <div class="card shadow-sm border-0 hover-shadow h-100 text-center">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center py-4">
                        <i class="bi bi-people-fill fs-1 text-info mb-3"></i>
                        <h5 class="card-title fw-bold">Manage Users</h5>
                        <p class="text-muted small">Add, edit, or remove users in the system.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Manage Departments -->
        <div class="col-md-6 col-lg-4">
            <a href="/admin/departments" class="text-decoration-none">
                <div class="card shadow-sm border-0 hover-shadow h-100 text-center">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center py-4">
                        <i class="bi bi-building fs-1 text-secondary mb-3"></i>
                        <h5 class="card-title fw-bold">Manage Departments</h5>
                        <p class="text-muted small">Organize and configure departments.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Manage Services -->
        <div class="col-md-6 col-lg-4">
            <a href="/admin/services" class="text-decoration-none">
                <div class="card shadow-sm border-0 hover-shadow h-100 text-center">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center py-4">
                        <i class="bi bi-gear-fill fs-1 text-warning mb-3"></i>
                        <h5 class="card-title fw-bold">Manage Services</h5>
                        <p class="text-muted small">Add or edit services available to citizens.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Reports & Stats -->
        <div class="col-md-6 col-lg-4">
            <a href="/admin/reports" class="text-decoration-none">
                <div class="card shadow-sm border-0 hover-shadow h-100 text-center">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center py-4">
                        <i class="bi bi-bar-chart-fill fs-1 text-danger mb-3"></i>
                        <h5 class="card-title fw-bold">Reports & Stats</h5>
                        <p class="text-muted small">View analytics and service reports.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Global Search -->
        <div class="col-md-6 col-lg-4">
            <a href="/admin/search" class="text-decoration-none">
                <div class="card shadow-sm border-0 hover-shadow h-100 text-center">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center py-4">
                        <i class="bi bi-search fs-1 text-success mb-3"></i>
                        <h5 class="card-title fw-bold">Global Search</h5>
                        <p class="text-muted small">Quickly find users, requests, and services.</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-3px);
        transition: all 0.3s ease;
        box-shadow: 0 8px 20px rgba(0,0,0,0.15) !important;
    }
</style>
