<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"><i class="bi bi-people-fill me-2"></i><%= title %></h2>
        <button class="btn btn-success btn-sm rounded-3 shadow-sm" data-bs-toggle="modal" data-bs-target="#addOfficerModal">
            <i class="bi bi-person-plus me-1"></i> Add Officer
        </button>
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-3">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th class="text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                <% if(officers.length > 0) { %>
                    <% officers.forEach(officer => { %>
                        <tr>
                            <td class="fw-semibold"><%= officer.id %></td>
                            <td><i class="bi bi-person-circle text-secondary me-2"></i> <%= officer.name %></td>
                            <td><%= officer.email %></td>
                            <td class="text-center">
                                <button class="btn btn-outline-primary btn-sm me-1 shadow-sm" data-bs-toggle="modal" data-bs-target="#editModal<%= officer.id %>">Edit</button>
                                <button class="btn btn-outline-danger btn-sm shadow-sm" data-bs-toggle="modal" data-bs-target="#deleteModal<%= officer.id %>">Delete</button>
                            </td>
                        </tr>

                        <!-- Edit Modal -->
                        <div class="modal fade" id="editModal<%= officer.id %>" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered modal-lg">
                                <div class="modal-content shadow-lg border-0 rounded-3">
                                    <form action="/department_head/officers/<%= officer.id %>/edit" method="POST">
                                        <div class="modal-header border-0 pb-0">
                                            <h5 class="modal-title fw-bold text-primary">
                                                <i class="bi bi-pencil-square me-2"></i>Edit Officer
                                            </h5>
                                            <button type="button" class="btn-close shadow-none" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="mb-3">
                                                <label for="name<%= officer.id %>" class="form-label">Name</label>
                                                <input type="text" id="name<%= officer.id %>" name="name" class="form-control rounded-3 shadow-sm" value="<%= officer.name %>" required>
                                            </div>
                                            <div class="mb-3">
                                                <label for="email<%= officer.id %>" class="form-label">Email</label>
                                                <input type="email" id="email<%= officer.id %>" name="email" class="form-control rounded-3 shadow-sm" value="<%= officer.email %>" required>
                                            </div>
                                            <div class="mb-3">
                                                <label for="department<%= officer.id %>" class="form-label">Department</label>
                                                <select id="department<%= officer.id %>" name="department_id" class="form-select rounded-3 shadow-sm" required>
                                                    <% departments.forEach(dept => { %>
                                                        <option value="<%= dept.id %>" <%= user.department_id === dept.id ? 'selected' : '' %>><%= dept.name %></option>
                                                    <% }) %>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="modal-footer border-0">
                                            <button type="button" class="btn btn-light rounded-3" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-warning rounded-3">Save Changes</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <!-- Delete Modal -->
                        <div class="modal fade" id="deleteModal<%= officer.id %>" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content border-0 shadow-lg rounded-4 bg-white">
                                    <div class="modal-header bg-danger text-white rounded-top-4">
                                        <h5 class="modal-title fw-semibold">
                                            <i class="bi bi-exclamation-triangle me-2"></i> Confirm Deletion
                                        </h5>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body p-4">
                                        <p class="mb-0 fs-6 text-muted">
                                            Are you sure you want to delete officer <strong><%= officer.name %></strong>?
                                        </p>
                                    </div>
                                    <div class="modal-footer border-0">
                                        <button class="btn btn-light px-4 rounded-3" data-bs-dismiss="modal">Cancel</button>
                                        <a href="/department_head/officers/<%= officer.id %>/delete" class="btn btn-danger px-4 rounded-3">Yes, Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="5" class="text-center text-muted">No officers found</td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Officer Modal -->
<div class="modal fade" id="addOfficerModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content shadow-lg border-0 rounded-3">
            <form action="/department_head/officers/add" method="POST">
                <div class="modal-header border-0 pb-0">
                    <h5 class="modal-title fw-bold text-success">
                        <i class="bi bi-person-plus me-2"></i> Add Officer
                    </h5>
                    <button type="button" class="btn-close shadow-none" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" id="name" name="name" class="form-control rounded-3 shadow-sm" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" name="email" class="form-control rounded-3 shadow-sm" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" id="password" name="password" class="form-control rounded-3 shadow-sm" required>
                    </div>
                    <div class="mb-3">
                        <label for="department" class="form-label">Department</label>
                        <select id="department" name="department_id" class="form-select rounded-3 shadow-sm" required>
                            <% departments.forEach(dept => { %>
                                <option value="<%= dept.id %>"><%= dept.name %></option>
                            <% }) %>
                        </select>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light rounded-3" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success rounded-3">Add Officer</button>
                </div>
            </form>
        </div>
    </div>
</div>
