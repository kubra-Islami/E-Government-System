<div class="container my-4">

    <!-- Welcome Card -->
    <div class="card bg-white shadow-sm mb-5 p-4 border-0 rounded-3">
        <div class="d-flex align-items-center">
            <i class="bi bi-person-circle text-primary fs-1 me-3"></i>
            <div>
                <h1 class="h3 fw-bold mb-0">Welcome back, <%= user.name %>!</h1>
                <p class="text-muted mb-0">Manage your department and track all applications easily.</p>
            </div>
        </div>
    </div>

    <!-- Stats Section -->
    <section class="mb-5">
        <h2 class="h5 text-secondary mb-4 text-uppercase">Department Stats</h2>
        <div class="row g-4">
            <div class="col-md-3">
                <div class="card text-center border-0 shadow-sm p-3">
                    <i class="bi bi-people-fill text-primary fs-2 mb-2"></i>
                    <h5 class="fw-bold"><%= stats.officers %></h5>
                    <p class="text-muted mb-0">Officers</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center border-0 shadow-sm p-3">
                    <i class="bi bi-file-earmark-text-fill text-success fs-2 mb-2"></i>
                    <h5 class="fw-bold"><%= stats.total_requests %></h5>
                    <p class="text-muted mb-0">Total Requests</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center border-0 shadow-sm p-3">
                    <i class="bi bi-check-circle-fill text-success fs-2 mb-2"></i>
                    <h5 class="fw-bold"><%= stats.approved %></h5>
                    <p class="text-muted mb-0">Approved</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center border-0 shadow-sm p-3">
                    <i class="bi bi-x-circle-fill text-danger fs-2 mb-2"></i>
                    <h5 class="fw-bold"><%= stats.rejected %></h5>
                    <p class="text-muted mb-0">Rejected</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Quick Actions Section -->
    <section class="mb-5">
        <h2 class="h5 text-secondary mb-4 text-uppercase">Quick Actions</h2>
        <div class="row row-cols-1 row-cols-md-2 g-4">
            <div class="col">
                <a href="/department_head/requests" class="card card-hover-effect h-100 border-0 shadow-sm text-decoration-none">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center text-center">
                        <i class="bi bi-clock-history text-info fs-1 mb-2"></i>
                        <h5 class="card-title text-dark fw-bold">Track Applications</h5>
                        <p class="card-text text-muted">Review, approve, or reject requests from your department.</p>
                    </div>
                </a>
            </div>
            <div class="col">
                <a href="/department_head/officers" class="card card-hover-effect h-100 border-0 shadow-sm text-decoration-none">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center text-center">
                        <i class="bi bi-person-badge-fill text-warning fs-1 mb-2"></i>
                        <h5 class="card-title text-dark fw-bold">Manage Officers</h5>
                        <p class="card-text text-muted">Add, update, or remove officers in your department.</p>
                    </div>
                </a>
            </div>
            <div class="col">
                <a href="/department_head/reports" class="card card-hover-effect h-100 border-0 shadow-sm text-decoration-none">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center text-center">
                        <i class="bi bi-bar-chart-fill text-success fs-1 mb-2"></i>
                        <h5 class="card-title text-dark fw-bold">View Reports</h5>
                        <p class="card-text text-muted">See statistics for requests, approvals, and departmental performance.</p>
                    </div>
                </a>
            </div>
        </div>
    </section>

    <!-- Recent Requests Table -->
    <section>
        <h2 class="h5 text-secondary mb-4 text-uppercase">Recent Requests</h2>
        <div class="table-responsive shadow-sm">
            <table class="table table-hover align-middle bg-white rounded-3">
                <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Request Number</th>
                    <th>Citizen Name</th>
                    <th>Service</th>
                    <th>Status</th>
                    <th>Submitted At</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                <% recentRequests.forEach((req, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= req.request_number %></td>
                        <td><%= req.citizen_name %></td>
                        <td><%= req.service_name %></td>
                        <td>
                            <% if(req.status === 'approved'){ %>
                                <span class="badge bg-success"><%= req.status %></span>
                            <% } else if(req.status === 'rejected'){ %>
                                <span class="badge bg-danger"><%= req.status %></span>
                            <% } else { %>
                                <span class="badge bg-warning text-dark"><%= req.status %></span>
                            <% } %>
                        </td>
                        <td><%= new Date(req.created_at).toLocaleDateString() %></td>
                        <td>
                            <a href="/department_head/requests/<%= req.id %>" class="btn btn-sm btn-primary">View</a>
                        </td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
    </section>

</div>
