<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"><i class="bi bi-bar-chart-fill me-2"></i><%= title %></h2>
        <div class="d-flex">
            <select id="reportType" class="form-select form-select-sm me-2">
                <option value="officerActivity">Officer Activity</option>
                <option value="departmentStats">Department Stats</option>
                <option value="timeSummary">Time Summary</option>
            </select>
            <button class="btn btn-primary btn-sm" id="filterBtn"><i class="bi bi-funnel-fill me-1"></i> Filter</button>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-3">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Officer</th>
                    <th>Task / Issue</th>
                    <th>Status</th>
                    <th>Date</th>
                </tr>
                </thead>
                <tbody>
                <% if(reports && reports.length > 0) { %>
                    <% reports.forEach((report, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= report.officer_name %></td>
                            <td><%= report.task_name %></td>
                            <td>
                                    <span class="badge <%= report.status === 'completed' ? 'bg-success' : 'bg-warning' %>">
                                        <%= report.status.charAt(0).toUpperCase() + report.status.slice(1) %>
                                    </span>
                            </td>
                            <td><%= report.date %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="5" class="text-center text-muted">No reports found</td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
